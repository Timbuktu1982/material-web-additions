{
  "name": "@maicol07/material-web-additions",
  "version": "1.4.1",
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@8.6.11",
  "engines": {
    "node": ">=18.0.0"
  },
  "description": "Material Web Components Additions",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/maicol07/material-web-additions.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/maicol07/material-web-additions/issues"
  },
  "homepage": "https://main--625eadb22bf40d003a32215a.chromatic.com/",
  "scripts": {
    "prepublishOnly": "pnpm run build",
    "build": "wireit",
    "build:ts": "wireit",
    "build:css-to-ts": "wireit",
    "build:sass": "wireit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "custom-elements-manifest": "wireit"
  },
  "files": [
    "**/*.js",
    "**/*.js.map",
    "**/*.d.ts",
    "**/*.scss",
    "!css-to-ts.js",
    "!**/test/**",
    "!**/testing/**",
    "!**/*_test.*",
    "!.wireit/**"
  ],
  "dependencies": {
    "@material/card": "^14.0.0",
    "@material/data-table": "^14.0.0",
    "@material/layout-grid": "^14.0.0",
    "@material/mwc-base": "^0.27.0",
    "lit": "^2.8.0",
    "tslib": "^2.6.2"
  },
  "peerDependencies": {
    "@material/web": "1.0.0-pre.13"
  },
  "devDependencies": {
    "@babel/core": "^7.22.15",
    "@babel/preset-env": "^7.22.15",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-typescript": "^7.22.15",
    "@custom-elements-manifest/analyzer": "^0.8.4",
    "@ljcl/storybook-addon-cssprops": "^3.1.0",
    "@material/web": "1.0.0-pre.17",
    "@storybook/addon-a11y": "^7.4.0",
    "@storybook/addon-actions": "^7.4.0",
    "@storybook/addon-backgrounds": "^7.4.0",
    "@storybook/addon-controls": "^7.4.0",
    "@storybook/addon-docs": "^7.4.0",
    "@storybook/addon-links": "^7.4.0",
    "@storybook/addon-measure": "^7.4.0",
    "@storybook/addon-storysource": "^7.4.0",
    "@storybook/addon-toolbars": "^7.4.0",
    "@storybook/addon-viewport": "^7.4.0",
    "@storybook/addons": "^7.4.0",
    "@storybook/api": "^7.4.0",
    "@storybook/blocks": "^7.4.0",
    "@storybook/components": "^7.4.0",
    "@storybook/core-events": "^7.4.0",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/preview-api": "^7.4.0",
    "@storybook/theming": "^7.4.0",
    "@storybook/web-components": "^7.4.0",
    "@storybook/web-components-vite": "^7.4.0",
    "@types/mdx": "^2.0.7",
    "@types/react": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "@web-types/lit": "2.0.0-3",
    "@webcomponents/webcomponentsjs": "^2.8.0",
    "eslint": "^8.48.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-storybook": "^0.6.13",
    "eslint-plugin-wc": "^1.5.0",
    "lit-analyzer": "2.0.0-pre.2",
    "lit-html": "^2.8.0",
    "markdown-to-jsx": "^7.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0",
    "remark-gfm": "^3.0.1",
    "sass": "~1.66.1",
    "storybook": "^7.4.0",
    "storybook-dark-mode": "^3.0.1",
    "storybook-docs-toc": "^1.7.0",
    "styled-components": "6.0.7",
    "ts-dedent": "^2.2.0",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "wireit": "^0.13.0"
  },
  "customElements": "custom-elements.json",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "css-loader",
        "sass-loader",
        "style-loader"
      ]
    }
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:ts",
        "custom-elements-manifest"
      ]
    },
    "build:ts": {
      "command": "tsc --pretty",
      "files": [
        "tsconfig.json",
        "**/*.ts",
        "!.storybook/",
        "!**/*.d.ts",
        "!**/*.css.ts",
        "!docs/"
      ],
      "output": [
        ".tsbuildinfo",
        "**/*.js",
        "**/*.js.map",
        "**/*.d.ts",
        "!*.js",
        "!types/",
        "!.storybook/",
        "!docs/"
      ],
      "clean": "if-file-deleted",
      "dependencies": [
        "build:css-to-ts"
      ]
    },
    "build:css-to-ts": {
      "command": "find . \\( -path ./.wireit -o -path ./node_modules -o -path ./docs -o -path ./.storybook \\) -prune -o -name '*.css' -print | xargs node css-to-ts.js",
      "files": [
        "css-to-ts.js"
      ],
      "output": [
        "**/*.css.ts"
      ],
      "dependencies": [
        "build:sass"
      ]
    },
    "build:sass": {
      "command": "sass --style=compressed --load-path=node_modules --load-path=node_modules/sass-true/sass $(ls -d */ | grep -v node_modules)",
      "files": [
        "**/*.scss",
        "!.storybook/",
        "!docs/"
      ],
      "output": [
        "**/*.css",
        "**/*.css.map",
        "!.storybook/",
        "!docs/"
      ]
    },
    "custom-elements-manifest": {
      "command": "cem analyze --litelement --globs \"**/*.ts\"",
      "files": [
        "**/*.ts",
        "!**/*.d.ts",
        "!**/*.css.ts"
      ],
      "output": [
        "custom-elements.json"
      ]
    }
  }
}
