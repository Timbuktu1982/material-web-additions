{
  "name": "@maicol07/material-web-additions",
  "version": "1.0.0",
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@7.24.3",
  "engines": {
    "node": ">=18.0.0"
  },
  "description": "Material Web Components Additions",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/maicol07/material-web-additions.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/maicol07/material-web-additions/issues"
  },
  "homepage": "https://main--625eadb22bf40d003a32215a.chromatic.com/",
  "scripts": {
    "prepublishOnly": "pnpm run build",
    "build": "wireit",
    "build:ts": "wireit",
    "build:css-to-ts": "wireit",
    "build:sass": "wireit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "custom-elements-manifest": "wireit"
  },
  "files": [
    "**/*.js",
    "**/*.js.map",
    "**/*.d.ts",
    "**/*.scss",
    "!css-to-ts.js",
    "!**/test/**",
    "!**/testing/**",
    "!**/*_test.*",
    "!.wireit/**"
  ],
  "dependencies": {
    "@material/card": "^14.0.0",
    "@material/data-table": "^14.0.0",
    "@material/layout-grid": "^14.0.0",
    "@material/mwc-base": "^0.27.0",
    "@material/mwc-linear-progress": "^0.27.0",
    "@material/web": "^1.0.0-pre.1",
    "lit": "^2.6.1",
    "tslib": "^2.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@custom-elements-manifest/analyzer": "^0.6.8",
    "@ljcl/storybook-addon-cssprops": "^2.3.5",
    "@storybook/addon-a11y": "^7.0.0-beta.16",
    "@storybook/addon-actions": "^7.0.0-beta.16",
    "@storybook/addon-docs": "^7.0.0-beta.16",
    "@storybook/addon-essentials": "^7.0.0-beta.16",
    "@storybook/addon-links": "^7.0.0-beta.16",
    "@storybook/addon-storysource": "^7.0.0-beta.16",
    "@storybook/addons": "^7.0.0-beta.16",
    "@storybook/api": "^7.0.0-beta.16",
    "@storybook/blocks": "7.0.0-beta.16",
    "@storybook/components": "^7.0.0-beta.16",
    "@storybook/core-events": "^7.0.0-beta.16",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/theming": "^7.0.0-beta.16",
    "@storybook/web-components": "^7.0.0-beta.16",
    "@storybook/web-components-vite": "^7.0.0-beta.16",
    "@types/mdx": "^2.0.3",
    "@types/react": "^18.0.27",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "@webcomponents/webcomponentsjs": "^2.7.0",
    "command-line-args": "^5.2.1",
    "eslint": "^8.33.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-storybook": "^0.6.10",
    "eslint-plugin-wc": "^1.4.0",
    "jscodeshift": "^0.14.0",
    "lit-analyzer": "2.0.0-pre.2",
    "lit-html": "^2.6.1",
    "markdown-to-jsx": "^7.1.9",
    "node-sass-import": "^2.0.1",
    "node-watch": "^0.7.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0",
    "requirejs": "^2.3.6",
    "rimraf": "^4.1.2",
    "sass": "~1.58.0",
    "storybook": "^7.0.0-beta.16",
    "storybook-addon-whats-new": "^1.0.3",
    "storybook-dark-mode": "^2.0.5",
    "storybook-docs-toc": "^1.7.0",
    "styled-components": "^5.3.6",
    "ts-dedent": "^2.2.0",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.9.5",
    "vite": "^4.1.1",
    "wireit": "^0.9.4"
  },
  "customElements": "custom-elements.json",
  "wireit": {
    "build": {
      "dependencies": [
        "build:ts",
        "custom-elements-manifest"
      ]
    },
    "build:ts": {
      "command": "tsc --pretty",
      "files": [
        "tsconfig.json",
        "**/*.ts",
        "!(.storybook/*.ts)",
        "!(**/stories/*.ts)",
        "!**/*.d.ts",
        "!**/*.css.ts"
      ],
      "output": [
        ".tsbuildinfo",
        "**/*.js",
        "**/*.js.map",
        "**/*.d.ts",
        "!*.js",
        "!types/",
        "!(.storybook/*.{js|js.map|d.ts})",
        "!(**/stories/*.{js|js.map|d.ts})"
      ],
      "clean": "if-file-deleted",
      "dependencies": [
        "build:css-to-ts"
      ]
    },
    "build:css-to-ts": {
      "command": "find . \\( -path ./.wireit -o -path ./node_modules \\) -prune -o -name '*.css' -print | xargs node css-to-ts.js",
      "files": [
        "css-to-ts.js"
      ],
      "output": [
        "**/*.css.ts"
      ],
      "dependencies": [
        "build:sass"
      ]
    },
    "build:sass": {
      "command": "sass --style=compressed --load-path=node_modules --load-path=node_modules/sass-true/sass $(ls -d */ | grep -v node_modules)",
      "files": [
        "**/*.scss",
        "!(.storybook/*.scss)",
        "!(**/stories/*.scss)"
      ],
      "output": [
        "**/*.css",
        "**/*.css.map",
        "!(.storybook/*.{css|css.map})",
        "!(**/stories/*.{css|css.map})"
      ]
    },
    "custom-elements-manifest": {
      "command": "cem analyze --litelement --globs \"**/*.ts\"",
      "files": [
        "**/*.ts",
        "!**/*.d.ts",
        "!**/*.css.ts"
      ],
      "output": [
        "custom-elements.json"
      ]
    }
  }
}
