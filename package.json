{
  "name": "@maicol07/material-web-additions",
  "private": true,
  "description": "Additional Material Web Components",
  "license": "Apache-2.0",
  "scripts": {
    "clean": "del-cli packages/*/node_modules packages/*/package-lock.json && pnpm clean:typescript && pnpm clean:styles && pnpm clean:scripts",
    "clean:typescript": "pnpm build:typescript -- --clean",
    "clean:styles": "del-cli packages/*/*.css.ts",
    "clean:scripts": "del-cli scripts/tsc-out",
    "dev": "es-dev-server --node-resolve --preserve-symlinks",
    "format": "clang-format --version; find . -name '*.ts' | grep -v node_modules | grep -v .d.ts | grep -v -- -css.ts | xargs clang-format -style=file -i",
    "format:check": "pnpm format && git diff --exit-code || (echo '\\033[31mERROR:\\033[0m Project is not formatted. Please run \"pnpm format\".' && false)",
    "lint:imports": "node scripts/check-imports.js",
    "lint": "pnpm lint:lit",
    "lint:fix": "pnpm lint:typescript -- --fix && pnpm lint:lit -- --fix",
    "lint:typescript": "eslint \"packages/**/*.ts\"",
    "lint:lit": "lit-analyzer \"packages/**/*.ts\" --strict",
    "postinstall": "pnpm bootstrap",
    "bootstrap": "./scripts/bootstrap.sh",
    "build": "pnpm build:styling && pnpm build:typescript -- --verbose",
    "build:styling": "pnpm -r run --stream build:style",
    "build:typescript": "tsc --build",
    "build:scripts": "tsc --project scripts/tsconfig.json",
    "build:demos": "rimraf dist && rollup -c",
    "update-gh-pages": "npm install && ./scripts/publish-demos.sh",
    "bump-all-mdc-web-deps": "pnpm build:scripts && node scripts/tsc-out/bump-all-mdc-web-deps.js packages/*/README.md",
    "prepack": "pnpm build",
    "powerwash:ts": "rm packages/*/*.js & rm packages/*/*.js.map & rm packages/*/*.d.ts & rm packages/*/.tsbuildinfo",
    "powerwash:styling": "rm packages/*/*-css.ts",
    "powerwash": "pnpm powerwash:ts & pnpm powerwash:styling && rm -rf node_modules",
    "watch": "pnpm build && node scripts/watcher.js",
    "watch:tests": "tsc --build test/tsconfig.json -w & tsc --build test/tsconfig-node.json -w",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "custom-elements-manifest": "cem analyze --litelement --globs \"packages/*/*.ts\"",
    "chromatic": "npx chromatic --project-token=f6640d511d8a"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.16.11",
    "@babel/runtime": "^7.17.9",
    "@custom-elements-manifest/analyzer": "^0.5.7",
    "@ljcl/storybook-addon-cssprops": "^1.0.1",
    "@open-wc/rollup-plugin-html": "^1.2.5",
    "@open-wc/rollup-plugin-polyfills-loader": "^1.1.8",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^21.1.0",
    "@rollup/plugin-node-resolve": "^13.2.1",
    "@rollup/plugin-strip": "^2.1.0",
    "@storybook/addon-a11y": "^6.4.22",
    "@storybook/addon-actions": "^6.4.22",
    "@storybook/addon-docs": "^6.4.22",
    "@storybook/addon-essentials": "^6.4.22",
    "@storybook/addon-links": "^6.4.22",
    "@storybook/addon-storysource": "^6.4.22",
    "@storybook/addons": "^6.4.22",
    "@storybook/api": "^6.4.22",
    "@storybook/builder-webpack5": "^6.4.22",
    "@storybook/components": "^6.4.22",
    "@storybook/core-events": "^6.4.22",
    "@storybook/manager-webpack5": "^6.4.22",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/theming": "^6.4.22",
    "@storybook/web-components": "^6.4.22",
    "@types/command-line-args": "^5.2.0",
    "@types/command-line-usage": "^5.0.2",
    "@types/jasmine": "^4.0.3",
    "@types/mdx": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "@web/dev-server": "^0.1.30",
    "@webcomponents/webcomponentsjs": "^2.6.0",
    "babel-loader": "^8.2.4",
    "clang-format": "^1.7.0",
    "command-line-args": "^5.2.1",
    "command-line-usage": "^6.1.3",
    "css-loader": "^6.7.1",
    "del-cli": "^4.0.1",
    "dom5": "^3.0.1",
    "es-dev-server": "^2.1.0",
    "eslint": "^8.13.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-jasmine": "^4.1.3",
    "eslint-plugin-storybook": "^0.5.10",
    "eslint-plugin-wc": "^1.3.2",
    "glob": "^8.0.1",
    "hanbi": "^1.0.1",
    "html-minifier-terser": "^7.0.0-alpha.2",
    "lit-analyzer": "^1.2.1",
    "lit-html": "^2.2.2",
    "node-sass-import": "^2.0.1",
    "node-watch": "^0.7.3",
    "parse5": "^6.0.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-is": "^17.0.0",
    "requirejs": "^2.3.6",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.2",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "~1.50.0",
    "sass-loader": "^12.6.0",
    "shady-css-parser": "^0.1.0",
    "storybook-addon-whats-new": "^1.0.3",
    "storybook-dark-mode": "^1.0.9",
    "storybook-docs-toc": "^1.7.0",
    "style-loader": "^3.3.1",
    "styled-components": "^5.3.5",
    "tachometer": "^0.5.10",
    "ts-dedent": "^2.2.0",
    "typescript": "~4.6.3",
    "webpack": "^5.72.0"
  },
  "customElements": "custom-elements.json"
}
