{
  "name": "@maicol07/material-web-additions",
  "version": "0.1.0",
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@7.21.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "description": "Material Web Components Additions",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/maicol07/material-web-additions.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/maicol07/material-web-additions/issues"
  },
  "homepage": "https://main--625eadb22bf40d003a32215a.chromatic.com/",
  "scripts": {
    "build": "wireit",
    "build:ts": "wireit",
    "build:css-to-ts": "wireit",
    "build:sass": "wireit",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "custom-elements-manifest": "wireit"
  },
  "files": [
    "**/*.js",
    "**/*.js.map",
    "**/*.d.ts",
    "**/*.scss",
    "!css-to-ts.js",
    "!**/test/**",
    "!**/testing/**",
    "!**/*_test.*",
    "!.wireit/**"
  ],
  "dependencies": {
    "@material/card": "^14.0.0",
    "@material/layout-grid": "^14.0.0",
    "@material/web": "0.1.0-alpha.2",
    "lit": "^2.5.0",
    "tslib": "^2.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.7",
    "@custom-elements-manifest/analyzer": "^0.6.6",
    "@ljcl/storybook-addon-cssprops": "^2.3.5",
    "@storybook/addon-a11y": "^6.5.15",
    "@storybook/addon-actions": "^6.5.15",
    "@storybook/addon-docs": "^6.5.15",
    "@storybook/addon-essentials": "^6.5.15",
    "@storybook/addon-links": "^6.5.15",
    "@storybook/addon-storysource": "^6.5.15",
    "@storybook/addons": "^6.5.15",
    "@storybook/api": "^6.5.15",
    "@storybook/builder-webpack5": "^6.5.15",
    "@storybook/components": "^6.5.15",
    "@storybook/core-events": "^6.5.15",
    "@storybook/manager-webpack5": "^6.5.15",
    "@storybook/mdx2-csf": "^0.0.3",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/theming": "^6.5.15",
    "@storybook/web-components": "^6.5.15",
    "@types/mdx": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "@webcomponents/webcomponentsjs": "^2.7.0",
    "babel-loader": "^8.3.0",
    "command-line-args": "^5.2.1",
    "css-loader": "^6.7.3",
    "eslint": "^8.30.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-storybook": "^0.6.8",
    "eslint-plugin-wc": "^1.4.0",
    "lit-analyzer": "2.0.0-pre.2",
    "lit-html": "^2.5.0",
    "node-sass-import": "^2.0.1",
    "node-watch": "^0.7.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "requirejs": "^2.3.6",
    "rimraf": "^3.0.2",
    "sass": "~1.55.0",
    "sass-loader": "^13.2.0",
    "storybook": "^6.5.15",
    "storybook-addon-whats-new": "^1.0.3",
    "storybook-dark-mode": "^1.1.2",
    "storybook-docs-toc": "^1.7.0",
    "style-loader": "^3.3.1",
    "styled-components": "^5.3.6",
    "ts-dedent": "^2.2.0",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "wireit": "^0.8.0"
  },
  "customElements": "custom-elements.json",
  "wireit": {
    "build": {
      "dependencies": [
        "build:ts",
        "custom-elements-manifest"
      ]
    },
    "build:ts": {
      "command": "tsc --pretty",
      "files": [
        "tsconfig.json",
        "**/*.ts",
        "!**/*.d.ts",
        "!**/*.css.ts"
      ],
      "output": [
        ".tsbuildinfo",
        "**/*.js",
        "**/*.js.map",
        "**/*.d.ts",
        "!*.js",
        "!.storybook/*.js",
        "!types/"
      ],
      "clean": "if-file-deleted",
      "dependencies": [
        "build:css-to-ts"
      ]
    },
    "build:css-to-ts": {
      "command": "find . \\( -path ./.wireit -o -path ./node_modules \\) -prune -o -name '*.css' -print | xargs node css-to-ts.js",
      "files": [
        "css-to-ts.js"
      ],
      "output": [
        "**/*.css.ts"
      ],
      "dependencies": [
        "build:sass"
      ]
    },
    "build:sass": {
      "command": "sass --style=compressed --load-path=node_modules --load-path=node_modules/sass-true/sass $(ls -d */ | grep -v node_modules)",
      "files": [
        "**/*.scss"
      ],
      "output": [
        "**/*.css",
        "**/*.css.map"
      ]
    },
    "custom-elements-manifest": {
      "command": "cem analyze --litelement --globs \"**/*.ts\"",
      "files": [
        "**/*.ts",
        "!**/*.d.ts",
        "!**/*.css.ts"
      ],
      "output": [
        "custom-elements.json"
      ]
    }
  }
}
