{
  "name": "@maicol07/material-web-additions",
  "private": true,
  "description": "Additional Material Web Components",
  "license": "Apache-2.0",
  "scripts": {
    "clean": "del-cli packages/*/node_modules packages/*/package-lock.json && pnpm clean:typescript && pnpm clean:styles && pnpm clean:scripts",
    "clean:typescript": "pnpm build:typescript -- --clean",
    "clean:styles": "del-cli packages/*/*.css.ts",
    "lint": "pnpm lint:lit",
    "lint:fix": "pnpm lint:typescript -- --fix && pnpm lint:lit -- --fix",
    "lint:typescript": "eslint \"packages/**/*.ts\"",
    "lint:lit": "lit-analyzer \"packages/**/*.ts\" --strict",
    "build": "pnpm build:styling && pnpm build:typescript -- --verbose",
    "build:styling": "pnpm -r run --stream build:style",
    "build:typescript": "tsc --build",
    "prepack": "pnpm build",
    "powerwash:ts": "rm packages/*/*.js & rm packages/*/*.js.map & rm packages/*/*.d.ts & rm packages/*/.tsbuildinfo",
    "powerwash:styling": "rm packages/*/*-css.ts",
    "powerwash": "pnpm powerwash:ts & pnpm powerwash:styling && rm -rf node_modules",
    "watch": "pnpm build && node scripts/watcher.js",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "custom-elements-manifest": "cem analyze --litelement --globs \"packages/*/*.ts\""
  },
  "devDependencies": {
    "@babel/core": "^7.17.12",
    "@custom-elements-manifest/analyzer": "^0.5.7",
    "@ljcl/storybook-addon-cssprops": "^2.3.2",
    "@storybook/addon-a11y": "^6.4.22",
    "@storybook/addon-actions": "^6.4.22",
    "@storybook/addon-docs": "^6.4.22",
    "@storybook/addon-essentials": "^6.4.22",
    "@storybook/addon-links": "^6.4.22",
    "@storybook/addon-storysource": "^6.4.22",
    "@storybook/addons": "^6.4.22",
    "@storybook/api": "^6.4.22",
    "@storybook/builder-webpack5": "^6.4.22",
    "@storybook/components": "^6.4.22",
    "@storybook/core-events": "^6.4.22",
    "@storybook/manager-webpack5": "^6.4.22",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/theming": "^6.4.22",
    "@storybook/web-components": "^6.4.22",
    "@types/mdx": "^2.0.2",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "@webcomponents/webcomponentsjs": "^2.6.0",
    "babel-loader": "^8.2.5",
    "command-line-args": "^5.2.1",
    "css-loader": "^6.7.1",
    "del-cli": "^4.0.1",
    "eslint": "^8.15.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-storybook": "^0.5.12",
    "eslint-plugin-wc": "^1.3.2",
    "lit-analyzer": "^1.2.1",
    "lit-html": "^2.2.4",
    "node-sass-import": "^2.0.1",
    "node-watch": "^0.7.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "requirejs": "^2.3.6",
    "rimraf": "^3.0.2",
    "sass": "~1.51.0",
    "sass-loader": "^12.6.0",
    "storybook-addon-whats-new": "^1.0.3",
    "storybook-dark-mode": "^1.1.0",
    "storybook-docs-toc": "^1.7.0",
    "style-loader": "^3.3.1",
    "styled-components": "^5.3.5",
    "ts-dedent": "^2.2.0",
    "typescript": "^4.6.4",
    "webpack": "^5.72.1"
  },
  "customElements": "custom-elements.json"
}
